<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop.xsd
       http://www.springframework.org/schema/context
       https://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="xyz.leeyangy.*"/>
    <!--    将增强程序配置成bean-->
    <bean id="aspect" class="xyz.leeyangy.aspect.Aspect"/>

    <!--    配置aop-->
    <aop:config>
        <!--        配置切点
                    接口/实现类都可以配
                    expression:配置切点表达式
                    execution配置:
        public boolean xyz.leeyangy.service.impl.UserServiceImpl.checkAddUser(..))
                * 匹配所有类型的方法返回值
                xyz.leeyangy.service.impl.* 匹配该包下所有的实现类
                xyz.leeyangy.service.impl.*。* 匹配所有实现类方法
                (..) 匹配方法中的所有形参，包括有 形参 和 没有形参
        -->
        <!--        <aop:pointcut id="pointcut" expression="execution(public boolean xyz.leeyangy.service.impl.UserServiceImpl.checkAddUser(..))"/>-->
        <aop:pointcut id="pointcut" expression="execution(public * xyz.leeyangy.service.impl.*.*(..))"/>

        <aop:aspect id="myAspect" ref="aspect">
            <!--            织入-->
            <!--            配置前置增强-->
            <aop:before method="beforeLog" pointcut-ref="pointcut"/>
            <!--            配置后置增强
                            returnning:配置后置增强方法中用于接收的方法返回值
            -->
            <aop:after-returning method="afterLog" pointcut-ref="pointcut" returning="res"/>
        </aop:aspect>
    </aop:config>
</beans>